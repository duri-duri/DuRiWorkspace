#!/bin/bash
# DuRi 백업 간편 실행 스크립트

# 백업 수준과 설명을 받아서 자동 백업 실행
if [ $# -eq 0 ]; then
    echo "❌ 사용법: ./backup [백업수준] [설명]"
    echo "📋 예시:"
    echo "   ./backup 백업 \"일반 작업 완료\""
    echo "   ./backup 백업백업 \"통합 테스트 성공\""
    echo "   ./backup 백업백업백업 \"중요 시스템 완성\""
    exit 1
fi

# Python 스크립트 실행
python3 "$(dirname "$0")/auto-backup.py" "$@"
