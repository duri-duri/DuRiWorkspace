{
  "dashboard": {
    "title": "DuRi SLO & Error Budget",
    "panels": [
      {
        "title": "Availability SLO (99.5%)",
        "type": "stat",
        "targets": [
          {
            "expr": "1 - (sum(rate(http_request_duration_seconds_count{status=~\"5..\"}[5m])) / sum(rate(http_request_duration_seconds_count[5m])))",
            "legendFormat": "Availability"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0.995},
                {"color": "green", "value": 0.999}
              ]
            }
          }
        }
      },
      {
        "title": "Latency SLO (p90 < 1s)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.9, sum by (le)(rate(http_request_duration_seconds_bucket[5m])))",
            "legendFormat": "p90 Latency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 1.0},
                {"color": "green", "value": 0.5}
              ]
            }
          }
        }
      },
      {
        "title": "Error Budget Burn Rate",
        "type": "timeseries",
        "targets": [
          {
            "expr": "sum(rate(http_request_duration_seconds_count{status=~\"5..\"}[5m])) / sum(rate(http_request_duration_seconds_count[5m]))",
            "legendFormat": "Error Rate"
          }
        ]
      }
    ]
  }
}
