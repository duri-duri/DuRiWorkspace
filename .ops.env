# DuRi 운영 환경 설정
# USB 콜드백업 연쇄반응 시스템

# 핵심 경로 설정
USB_ROOT="/mnt/usb/DuRiSync"
HOSP_ROOT="/mnt/e/DuRiSafe_HOSP"
HOME_ROOT="/mnt/f/DuRiSafe_HOME"
HANDOFF_ROOT="/mnt/usb/두리백업"

# 락 파일 설정
USB_COLD_LOCK="/var/lock/usb_cold.lock"
USB_SYNC_LOCK="/var/lock/usb_incremental_sync.lock"

# 백업 설정
DAYS=7
VERIFY_SAMPLE=10
DRYRUN=0

# 로그 설정
LOG_LEVEL=INFO


