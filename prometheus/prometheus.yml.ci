global:
  scrape_interval: 5s
  evaluation_interval: 5s

rule_files:
  - /etc/prometheus/rules/heartbeat.rules.yml

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['prometheus:9090']
  
  - job_name: 'pushgateway-ci'
    honor_labels: true
    static_configs:
      - targets: ['pushgateway-ci:9091']
