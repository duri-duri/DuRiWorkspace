# Minimal Prometheus configuration for Observability Contract v1
# Topology: single static target (node-exporter:9100)

global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - /etc/prometheus/rules/*.yml

scrape_configs:
  - job_name: node
    static_configs:
      - targets: ["node-exporter:9100"]

