# DuRi Control System - 프로덕션 환경 변수
# 이 파일을 .env로 복사하여 사용하세요

# =============================================================================
# 데이터베이스 설정
# =============================================================================
POSTGRES_HOST=duri-postgres
POSTGRES_PORT=5432
POSTGRES_DB=duri
POSTGRES_USER=duri
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD

# =============================================================================
# Redis 설정
# =============================================================================
REDIS_HOST=duri-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# 서비스 포트 설정
# =============================================================================
DURI_CONTROL_PORT=8083
DURI_CORE_PORT=8080
DURI_BRAIN_PORT=8081
DURI_EVOLUTION_PORT=8082

# =============================================================================
# 보안 설정
# =============================================================================
# JWT 시크릿 키 (프로덕션에서는 반드시 변경하세요)
JWT_SECRET_KEY=your_super_secret_jwt_key_for_production_2024
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 관리자 계정 설정
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
ADMIN_EMAIL=admin@duri.system

# =============================================================================
# 로깅 설정
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# 백업 설정
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 매일 새벽 2시
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# =============================================================================
# 모니터링 설정
# =============================================================================
MONITORING_ENABLED=true
MONITORING_INTERVAL=60  # 초
ALERT_ENABLED=true
ALERT_EMAIL=alerts@duri.system

# =============================================================================
# 네트워크 설정
# =============================================================================
# 외부 접근 허용 여부 (프로덕션에서는 false 권장)
ALLOW_EXTERNAL_ACCESS=false
# CORS 설정
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# =============================================================================
# 성능 설정
# =============================================================================
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30

# =============================================================================
# 개발/디버그 설정 (프로덕션에서는 false)
# =============================================================================
DEBUG=false
RELOAD=false 