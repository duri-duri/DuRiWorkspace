{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://duri.ai/schemas/state.schema.json",
  "title": "DuRi Learning State",
  "type": "object",
  "required": ["run_id", "timestamp", "git", "host", "phase", "artifacts"],
  "properties": {
    "schema_version": { "type": "string", "default": "1.1" },

    "run_id": { "type": "string", "description": "세션 ID (UUID/ULID)" },
    "timestamp": { "type": "string", "format": "date-time" },

    "git": {
      "type": "object",
      "required": ["commit", "branch"],
      "properties": {
        "commit": { "type": "string" },
        "branch": { "type": "string" },
        "repo_remote": { "type": "string" }
      },
      "additionalProperties": false
    },

    "host": {
      "type": "object",
      "required": ["hostname", "os"],
      "properties": {
        "hostname": { "type": "string" },
        "os": { "type": "string" },
        "python": { "type": "string" },
        "env_name": { "type": "string" }
      },
      "additionalProperties": false
    },

    "phase": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "step": { "type": "integer" }
      },
      "additionalProperties": false
    },

    "params": {
      "type": "object",
      "description": "하이퍼파라미터",
      "additionalProperties": { "type": ["number", "string", "boolean"] }
    },

    "metrics": {
      "type": "object",
      "description": "핵심 지표",
      "additionalProperties": { "type": ["number", "string", "boolean"] }
    },

    "artifacts": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["logical_name", "type", "created_at", "size_bytes", "sha256"],
        "properties": {
          "logical_name": { "type": "string" },
          "type": { "type": "string", "enum": ["checkpoint", "model", "dataset", "log", "cache", "report"] },
          "created_at": { "type": "string", "format": "date-time" },
          "size_bytes": { "type": "integer", "minimum": 0 },
          "sha256": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "local_path": { "type": "string" },
          "backup_refs": { "type": "array", "items": { "type": "string" } },
          "tags": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" },
          "source_host": { "type": "string" },
          "storage_class": { "type": "string", "enum": ["hot", "warm", "cold"] }
        },
        "additionalProperties": false
      }
    },

    "backup": {
      "type": "object",
      "properties": {
        "primary_root": { "type": "string" },
        "date_bucket": { "type": "string", "description": "YYYY/MM/DD" },
        "bundle_name": { "type": "string" }
      },
      "additionalProperties": false
    },

    "notes": { "type": "string" }
  },
  "additionalProperties": false
}






