{
  "terminal.integrated.allowlist": false,
  "terminal.integrated.openInTerminal": true,

  "terminal.integrated.defaultProfile.windows": "Ubuntu-22.04 (WSL)",
  "terminal.integrated.profiles.windows": {
    "Ubuntu-22.04 (WSL)": {
      "path": "C:\\Windows\\System32\\wsl.exe",
      "icon": "terminal-bash",
      "args": []
    }
  },

  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.shell.linux": "/bin/bash",
  
  "github.copilot.chat.runInTerminal": true,
  "terminal.integrated.alwaysRunInTerminal": true,
  "terminal.integrated.hideCommandLine": true,
  
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.enableMultiLinePasteWarning": false
}