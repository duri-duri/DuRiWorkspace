{
  "app": {
    "name": "DuRi Core",
    "version": "1.0.0",
    "description": "DuRi Core Service - Main orchestration service"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "debug": false,
    "workers": 4
  },
  "services": {
    "brain": {
      "url": "http://duri-brain:8081",
      "timeout": 30,
      "retries": 3
    },
    "evolution": {
      "url": "http://duri-evolution:8082",
      "timeout": 30,
      "retries": 3
    }
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "file": "/app/../logs/core.log",
    "max_size": "100MB",
    "backup_count": 5
  },
  "database": {
    "url": "postgresql://duri:duri@duri-postgres:5432/duri",
    "pool_size": 10,
    "max_overflow": 20
  },
  "redis": {
    "url": "redis://:your_redis_password@duri-redis:6379/0",
    "pool_size": 10
  },
  "security": {
    "api_keys": {
      "brain": "your_brain_api_key_here",
      "evolution": "your_evolution_api_key_here"
    },
    "cors": {
      "origins": ["*"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": ["Content-Type", "Authorization"]
    }
  }
} 