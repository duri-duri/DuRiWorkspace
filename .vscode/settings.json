{
  // 터미널
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "/bin/bash",
      "args": ["-l"]
    }
  },
  "terminal.integrated.shell.linux": "/bin/bash",
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.rightClickBehavior": "default",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.allowlist": false,
  "terminal.integrated.openInTerminal": true,
  "terminal.integrated.sendKeybindingsToShell": false,
  "terminal.integrated.commandsToSkipShell": [],
  "terminal.integrated.macOptionIsMeta": false,
  "terminal.integrated.macOptionClickBehavior": "selectWord",
  "terminal.integrated.allowChords": false,

  // ===== 워처 부하 절감(핵심) =====
  "files.watcherExclude": {
    "**/backups/**": true,
    "**/backup*/**": true,
    "**/backup_repository/**": true,
    "**/duri_snapshots/**": true,
    "**/conversation_logs/**": true,
    "**/logs/**": true,
    "**/datasets/**": true,
    "**/.test-artifacts/**": true,
    "**/.benchmarks/**": true,

    // 대용량/아카이브/임시 산출물
    "**/*.tar": true,
    "**/*.tar.*": true,
    "**/*.zip": true,
    "**/*.7z": true,
    "**/*.bak": true,
    "**/*.zst": true,
    "**/.cache/**": true,

    // 테스트/파이썬 캐시
    "**/.pytest_cache/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,

    // DB/캐시형 파일(내용 변화 감시 불필요)
    "**/*.db": true,
    "**/*.sqlite": true,

    // Git 은 완전히 제외하지 않고, 무거운 objects 와 LFS 만 제외 (Git 기능 유지)
    "**/.git/objects/**": true,
    "**/.git/lfs/**": true
  },

  // ===== 검색 부하 절감(기능 유지) =====
  "search.exclude": {
    "**/backups/**": true,
    "**/backup*/**": true,
    "**/backup_repository/**": true,
    "**/duri_snapshots/**": true,
    "**/conversation_logs/**": true,
    "**/logs/**": true,
    "**/datasets/**": true,
    "**/.test-artifacts/**": true,
    "**/.benchmarks/**": true,
    "**/.pytest_cache/**": true,
    "**/__pycache__/**": true,
    "**/.venv/**": true,
    "**/.cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/objects/**": true,
    "**/.git/lfs/**": true
  },
  "search.followSymlinks": false,
  "search.useIgnoreFiles": true,

  // ===== Git 부하/잡음 최소화(핵심 기능 유지) =====
  "git.autoRepositoryDetection": "openEditors",
  "git.pruneOnFetch": true,
  "git.autofetch": false,
  "git.ignoreLimitWarning": true,

  // 에디터 경량화
  "editor.minimap.enabled": false,
  "editor.codeLens": false,
  "editor.inlayHints.enabled": "off",
  "editor.inlineSuggest.enabled": false,
  "breadcrumbs.enabled": false,
  "workbench.list.smoothScrolling": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.renderWhitespace": "selection",

  // 대용량/워처 부담 완화
  "files.maxMemoryForLargeFilesMB": 8192,

  // Git/확장 자동 트래픽 축소
  "extensions.autoUpdate": false,
  "update.mode": "manual",

  // ===== Cursor Chat 터미널 라우팅 강제 =====
  "cursor.chat.autoRunMode": "terminal",
  "cursor.chat.defaultExecutionTarget": "terminal",
  "cursor.chat.alwaysUseTerminal": true,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "security.workspace.trust.enabled": true,
  "files.simpleDialog.enable": true
}








