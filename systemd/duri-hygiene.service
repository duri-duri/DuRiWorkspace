[Unit]
Description=DuRi data hygiene daily
After=network-online.target

[Service]
Type=oneshot
User=duri
WorkingDirectory=/home/duri/DuRiWorkspace
ExecStart=/usr/bin/env bash -lc 'bash scripts/metrics/data_hygiene.sh .reports/train/day64/LATEST.tsv'
SyslogIdentifier=duri-hygiene
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=read-only
ReadWritePaths=/home/duri/DuRiWorkspace/.reports /home/duri/DuRiWorkspace/var
UMask=027


