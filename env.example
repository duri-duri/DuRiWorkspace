# DuRi 통합 설정 파일
# 이 파일을 .env로 복사하여 실제 값을 설정하세요

# =============================================================================
# 기본 환경 설정
# =============================================================================
DURI_ENV=dev
DURI_DEBUG=false
DURI_VERSION=latest

# =============================================================================
# 데이터베이스 설정
# =============================================================================
POSTGRES_HOST=duri-postgres
POSTGRES_PORT=5432
POSTGRES_DB=duri
POSTGRES_USER=duri
POSTGRES_PASSWORD=duri_secure_password_2024
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# =============================================================================
# Redis 설정
# =============================================================================
REDIS_HOST=duri-redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=10

# =============================================================================
# 서비스 포트 설정
# =============================================================================
DURI_CORE_PORT=8080
DURI_BRAIN_PORT=8081
DURI_EVOLUTION_PORT=8082
DURI_CONTROL_PORT=8083

# =============================================================================
# 보안 설정
# =============================================================================
JWT_SECRET_KEY=your_super_secret_jwt_key_for_production_2024
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API 키들
BRAIN_API_KEY=your_secure_brain_api_key
EVOLUTION_API_KEY=your_secure_evolution_api_key

# 관리자 계정 설정
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secure_admin_password_2024
ADMIN_EMAIL=admin@duri.system

# =============================================================================
# 로깅 설정
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/app/logs
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# =============================================================================
# 모니터링 설정
# =============================================================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_USER=duri-duri
GRAFANA_PASSWORD=DuRi@2025!

# =============================================================================
# 백업 설정
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups
