# DuRi All-in-One Environment Configuration
# 이 파일을 .env로 복사하여 사용하세요.

# --- 데이터베이스 설정 ---
POSTGRES_USER=duri
DB_HOST=duri-postgres
DB_PORT=5432
DB_NAME=duri

# --- 환경 설정 ---
DURI_ENV="dev" # dev | ops | prod | test
DURI_DEBUG=False
DURI_VERSION="0.0.0"

# --- 데이터베이스 설정 (Pydantic) ---
DURI_DATABASE__HOST="duri-postgres"
DURI_DATABASE__PORT=5432
DURI_DATABASE__DB="duri"
DURI_DATABASE__USER="duri"
DURI_DATABASE__PASSWORD="CHANGE_ME_POSTGRES_PASSWORD"
DURI_DATABASE__URL="postgresql://duri:CHANGE_ME_POSTGRES_PASSWORD@duri-postgres:5432/duri"

# --- Redis 설정 ---
DURI_REDIS__HOST="duri-redis"
DURI_REDIS__PORT=6379
DURI_REDIS__DB=0
DURI_REDIS__PASSWORD="" # Redis 비밀번호 (필요 시)
DURI_REDIS__URL="redis://duri-redis:6379/0"

# --- 서비스 포트 설정 ---
DURI_SERVICES__CORE_PORT=8080
DURI_SERVICES__BRAIN_PORT=8081
DURI_SERVICES__EVOLUTION_PORT=8082
DURI_SERVICES__CONTROL_PORT=8083

# --- 로깅 설정 ---
DURI_LOGGING__LEVEL="INFO" # DEBUG | INFO | WARNING | ERROR | CRITICAL
DURI_LOGGING__FILE_PATH="/app/logs"

# --- 보안 설정 ---
DURI_SECURITY__JWT_SECRET_KEY="CHANGE_ME_JWT_SECRET"
DURI_SECURITY__ADMIN_USERNAME="admin"
DURI_SECURITY__ADMIN_PASSWORD="CHANGE_ME_ADMIN_PASSWORD"
DURI_SECURITY__API_KEY="CHANGE_ME_API_KEY"

# --- 모니터링 설정 ---
DURI_MONITORING__PROMETHEUS_URL="http://prometheus:9090"
DURI_MONITORING__GRAFANA_URL="http://grafana:3000"
DURI_MONITORING__GRAFANA_USER="duri-duri"
DURI_MONITORING__GRAFANA_PASSWORD="CHANGE_ME_GRAFANA_PASSWORD"

# --- 백업 설정 ---
DURI_BACKUP__ENABLED=True
DURI_BACKUP__SCHEDULE="0 2 * * *"
DURI_BACKUP__RETENTION_DAYS=30
DURI_BACKUP__PATH="/app/backups"
