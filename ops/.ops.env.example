# ===== Runtime defaults =====
PROJECT_DIR="$HOME/DuRiWorkspace"

# Compose files
COMPOSE_BASE="docker-compose.yml"
COMPOSE_HEALTH="compose.health.overlay.yml"

# Docker daemon mode: auto | desktop | native | sudo-native
DOCKER_DAEMON_MODE="auto"

# Sock + waits
DOCKER_SOCK="/var/run/docker.sock"
WAIT_DOCKER_SECS=180        # Desktop 기동까지 고려해 여유 있게
HEALTH_TIMEOUT_SECS=150

# Prometheus 운영 모드: off | standalone | compose
PROM_MODE="standalone"
PROM_NAME="prometheus"
PROM_PORT=9090
PROM_CONFIG="$PROJECT_DIR/prometheus.yml"
PROM_RULES="$PROJECT_DIR/rules.d"

# Prometheus target check (optional)
PROM_URL="http://localhost:9090"
TARGET_JOBS="redis,node,cadvisor,blackbox"
STRICT_PROM_TARGETS=0   # 1로 두면 DOWN시 스크립트 실패 처리
