# ===== Runtime defaults =====
PROJECT_DIR="$HOME/DuRiWorkspace"

# Compose files
COMPOSE_BASE="docker-compose.yml"
COMPOSE_HEALTH="compose.health.overlay.yml"

# Docker daemon (non-systemd)
DOCKER_SOCK="/var/run/docker.sock"
WAIT_DOCKER_SECS=25

# Health gate
HEALTH_TIMEOUT_SECS=150

# Prometheus mode: off | standalone | compose
PROM_MODE="compose"
PROM_NAME="prometheus"
PROM_PORT=9090
PROM_CONFIG="$PROJECT_DIR/prometheus.yml"
PROM_RULES="$PROJECT_DIR/prometheus_rules.yml"
