# ========================================
# DuRi Workspace 통합 환경 설정
# ========================================

# ========================================
# 공통 설정 (Common Settings)
# ========================================

# 데이터베이스 설정
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=duri
DATABASE_USER=duri
DATABASE_PASSWORD=duri
DATABASE_URL=postgresql://duri:duri@postgres:5432/duri

# Redis 설정
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# 로깅 설정
LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_DIR=./logs
DURI_LOG_LEVEL=DEBUG
DURI_LOG_DIR=/app/logs

# 상태 및 데이터 디렉토리
STATE_DIR=./brain_state
RECEIVE_JSON_LOG=./brain_state/receive_log.json
EVOLUTION_LOG_PATH=./brain_state/receive_log.json
ACTION_STATS_PATH=./brain_state/action_stats.json

# ========================================
# 서비스별 설정 (Service Settings)
# ========================================

# Core 서비스
CORE_PORT=8080
CORE_HOST=0.0.0.0

# Brain 서비스
BRAIN_PORT=8081
BRAIN_HOST=0.0.0.0
BRAIN_URL=http://duri_brain_container:8081/brain

# Evolution 서비스
EVOLUTION_PORT=8082
EVOLUTION_HOST=0.0.0.0
EVOLUTION_URL=http://duri_evolution_container:8082/evolve

# Control 서비스
CONTROL_PORT=8083
CONTROL_HOST=0.0.0.0

# ========================================
# 개발 환경 설정 (Development)
# ========================================
NODE_ENV=development
DEBUG=true

# ========================================
# 호환성을 위한 기존 변수 (Legacy Compatibility)
# ========================================
# 기존 코드와의 호환성을 위해 유지
PORT=8080
