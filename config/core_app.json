{
  "app": {
    "name": "DuRi Evolution",
    "version": "1.0.0",
    "description": "DuRi Evolution Service - Learning and evolution system"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8082,
    "debug": false,
    "workers": 4
  },
  "evolution": {
    "learning_rate": 0.1,
    "max_cycles_per_session": 100,
    "pattern_analysis_interval": 300,
    "insight_generation_interval": 600,
    "knowledge_update_interval": 900
  },
  "data": {
    "evolution_data_dir": "/app/data/evolution_data",
    "patterns_dir": "/app/data/patterns",
    "insights_dir": "/app/data/insights",
    "knowledge_dir": "/app/data/knowledge",
    "cache_enabled": true,
    "cache_ttl": 1800
  },
  "analysis": {
    "pattern_min_confidence": 0.6,
    "insight_min_confidence": 0.7,
    "min_data_points": 10,
    "max_patterns_per_emotion": 20,
    "max_insights_per_session": 5
  },
  "recommendations": {
    "max_recommendations": 5,
    "min_success_rate": 0.3,
    "weight_recent_results": 0.7,
    "weight_success_rate": 0.3
  },
  "logging": {
    "level": "INFO",
    "format": "json",
    "file": "/app/../logs/evolution.log",
    "max_size": "100MB",
    "backup_count": 5
  },
  "database": {
    "url": "${DATABASE_URL}",
    "pool_size": 10,
    "max_overflow": 20
  },
  "redis": {
    "url": "${REDIS_URL}",
    "pool_size": 10
  },
  "services": {
    "brain": {
      "url": "http://duri-brain:8081",
      "timeout": 30,
      "retries": 3
    }
  },
  "performance": {
    "max_concurrent_requests": 50,
    "request_timeout": 60,
    "batch_size": 100,
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 500
    }
  },
  "security": {
    "api_key": "${API_KEY}",
    "cors": {
      "origins": ["*"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": ["Content-Type", "Authorization"]
    }
  }
} 